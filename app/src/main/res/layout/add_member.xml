<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/addMemberTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"

                android:layout_marginTop="60dp"
                android:text="@string/xmladdmember_editText10_text"
                android:textAlignment="center"
                android:textSize="28dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/qrCodeImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="30dp" />

            <TextView
                android:id="@+id/qrError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-5dp"
                android:layout_marginStart="10dp"
                android:clickable="true"
                android:ems="10"
                android:text="@string/xmladdmember_editText2_text" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/grDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:paddingLeft="10dp">

            </android.support.v7.widget.RecyclerView>

            <Button
                android:id="@+id/scanqrbtn"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/buttontint"
                android:gravity="center_vertical"
                android:text="@string/xmladdmember_scanqrbtn_text"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/btnLeave"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:text="@string/leaveGroup"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:visibility="gone"
                android:backgroundTint="@color/buttontint"
                android:textColor="@color/colorPrimary"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>