<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ccpe001.familywallet.budget.BudListView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/block"
        android:backgroundTintMode="src_over">

        <TextView
            android:id="@+id/budStat"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="24dp"
            android:layout_toEndOf="@+id/budName"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="TextView"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/expense"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/budStat"
            android:layout_alignParentStart="true"
            android:layout_marginStart="11dp"
            android:layout_weight="1"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            app:srcCompat="@drawable/round"/>

        <TextView
            android:id="@+id/budName"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_below="@+id/img"
            android:layout_toStartOf="@+id/typesAcc"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="TextView"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/budCat"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/img"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="TextView"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/txtbudgetId"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_alignStart="@+id/budStat"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="date"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/typesAcc"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_alignBaseline="@+id/budName"
            android:layout_alignBottom="@+id/budName"
            android:layout_alignParentEnd="true"
            android:text="TextView"/>

    </RelativeLayout>


</LinearLayout>
