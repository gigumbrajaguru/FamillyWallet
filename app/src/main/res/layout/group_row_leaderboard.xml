<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/transaction_main_block"
    android:backgroundTint="@color/learderboard"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:weightSum="1">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/proPic"
        android:layout_width="59dp"
        android:layout_height="56dp"
        android:layout_x="22dp"
        android:layout_y="9dp"
        android:src="@drawable/com_facebook_profile_picture_blank_square"
        app:civ_border_width="0dp" />

    <TextView
        android:id="@+id/txtGrName"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_x="106dp"
        android:layout_y="3dp"
        android:fontFamily="serif"
        android:paddingStart="10dp"
        android:text="Name"
        android:textColor="@color/cardview_light_background"
        android:textSize="21sp"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="229dp"
        android:layout_y="32dp"
        android:rotation="0"
        android:tint="@color/expense"
        app:srcCompat="@mipmap/arrow" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="90dp"
        android:layout_y="32dp"
        android:rotation="180"
        android:tint="@color/income"
        app:srcCompat="@mipmap/arrow" />

    <TextView
        android:id="@+id/txtIncome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="131dp"
        android:layout_y="37dp"
        android:text="@string/totalInc"
        android:textColor="@color/income"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txtIncomeAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="166dp"
        android:layout_y="56dp"
        android:text="Income"
        android:textColor="@color/income"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="136dp"
        android:layout_y="56dp"
        android:text="@string/lkr"
        android:textColor="@color/income"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtExpenseAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="308dp"
        android:layout_y="56dp"
        android:text="Expense"
        android:textColor="@color/expense"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="279dp"
        android:layout_y="56dp"
        android:text="@string/lkr"
        android:textColor="@color/expense"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtExpense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="275dp"
        android:layout_y="37dp"
        android:text="@string/totalExp"
        android:textColor="@color/expense"
        android:textStyle="bold"
        android:visibility="visible" />

</AbsoluteLayout>