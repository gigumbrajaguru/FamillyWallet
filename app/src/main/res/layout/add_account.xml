<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ccpe001.familywallet.budget.addAccount">

    <Switch
        android:id="@+id/swcPrivate"
        android:layout_width="159dp"
        android:layout_height="51dp"
        android:layout_x="29dp"
        android:layout_y="317dp"
        android:text="Is private"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="230dp"
        android:layout_alignTop="@+id/swtNotify"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="21dp"/>

    <Switch
        android:id="@+id/swtNotify"
        android:layout_width="159dp"
        android:layout_height="51dp"
        android:layout_x="203dp"
        android:layout_y="316dp"
        android:text="Notification"
        tools:layout_editor_absoluteX="211dp"
        tools:layout_editor_absoluteY="230dp"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/accType"
        android:layout_toStartOf="@+id/swcPrivate"
        android:layout_marginEnd="39dp"/>

    <EditText
        android:id="@+id/editText7"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="32dp"
        android:layout_x="30dp"
        android:layout_y="174dp"
        android:ems="10"
        android:hint="Available Amount "
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="83dp"/>

    <EditText
        android:id="@+id/editText5"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_x="28dp"
        android:layout_y="112dp"
        android:ems="10"
        android:hint="Account Name"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginTop="27dp"
        android:layout_alignParentEnd="true"/>

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_x="119dp"
        android:layout_y="397dp"
        android:background="@color/success_color"
        android:text="Submit"
        android:layout_below="@+id/swcPrivate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"/>


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account Name"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_marginTop="81dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/textView6"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/editText5"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/swcPrivate"/>

    <Spinner
        android:id="@+id/accType"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/editText7"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"/>

    <Spinner
        android:id="@+id/curType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView5"
        android:layout_marginStart="18dp"
        android:layout_toEndOf="@+id/textView5"/>

</RelativeLayout>
